<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFrag">


    <TextView
        android:id="@+id/idQuestionNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Questions done: "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/idQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idQuestionNum"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:padding="10dp"
        android:text="Questions"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idQuestions"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idQuestions"
            android:orientation="vertical">

            <Button
                android:id="@+id/idOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/adamina"
                android:backgroundTint="#009efd"
                android:padding="15dp"
                android:text="Option 1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/idOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#009efd"
                android:padding="15dp"
                android:text="Option 2"
                android:fontFamily="@font/adamina"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/idOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#009efd"
                android:padding="15dp"
                android:text="Option 3"
                android:fontFamily="@font/adamina"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/idOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#009efd"
                android:padding="15dp"
                android:text="Option 4"
                android:fontFamily="@font/adamina"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>